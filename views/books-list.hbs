<h1>Books List: </h1>

{{#each books}}
    <section class="book">
        Title: {{this.title}} <br />
        Author: {{this.author}} <br />
        Rating: {{this.rating}} <br /><br />

        <a href="/books/{{this._id}}">Details</a> |
        <a href="/books/{{this._id}}/edit">Edit</a> | 

        <form class="delete-form" action="/books/{{this._id}}/delete" method="POST">
            <button>Delete</button>
        </form>

    </section>
{{/each}}


