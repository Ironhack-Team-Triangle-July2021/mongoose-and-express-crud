<h2>Edit: {{book.title}}</h2>

<form action="/books/{{book._id}}/edit" method="post" enctype="multipart/form-data">
  <label> Title:
    <input type="text" name="title" value="{{book.title}}" />
  </label>

  <label> Author:
    <input type="text" name="author" value="{{book.author}}" />
  </label>

  <label> Description:
    <textarea name="description" cols="30" rows="4">{{book.description}}</textarea>
  </label>

  <label> Rate:
    <input type="number" name="rating" min="1" max="10" value="{{book.rating}}" />
  </label>

  <label> Book Cover:
    <input type="file" name="book-cover-image" />
  </label>

  <button>Save changes</button>
</form>
